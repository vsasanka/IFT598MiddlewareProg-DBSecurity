doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title New The Trending Courses

  body
  

    //section class="overview"
    main.main
      .card-container
        .card
          .card__header
          .card__details
            h4.card__sub-heading Sign Up 
            p.card__text Please enter the following Details
            
            .card__data    
              form(action='/loan', method='post')
                <label for="loanType">Loan Type (home, education, boat, car)</label>
                <select id="loanType" name="loanType">
                  <option value="home">Home</option>
                  <option value="education">Education</option>
                  <option value="car">Car</option>
                  <option value="boat">Boat</option>
                </select><br><br>
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount"><br><br>
                <label for="loanTerm">Loan Term:</label>
                <input type="number" id="loanTerm" name="loanTerm"><br><br>
                <label for="interestRate">Interest:</label>
                <input type="number" id="interestRate" name="interestRate"><br><br>
                <input class="card__sub-heading" type="submit" value="New Loan">
              