doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title New The Trending Courses

  body
  

    //section class="overview"
    main.main
      .card-container
        .card
          .card__header
          .card__details
            h4.card__sub-heading Sign Up 
            p.card__text Please enter the following Details
            
            .card__data    
              form(action='/users/signup', method='post')
                <label for="name">Full  Name:</label>
                <input type="text" id="name" name="name"><br><br>
                
                <label for="email">Email:</label>
                <input type="text" id="email" name="email"><br><br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password"><br><br>
              
                <label for="passwordConfirm">Confirm Password:</label>
                <input type="password" id="passwordConfirm" name="passwordConfirm"><br><br>
                
                <input class="card__sub-heading" type="submit" value="Sign Up">
              